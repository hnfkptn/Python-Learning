def faktoriyel (sayi):
    sonuc = 1
    i = 1
    while sayi >= i:
        sonuc *= sayi
        sayi -= 1
    return sonuc
print(faktoriyel(5))

def faktoriyel (sayi):
    sonuc = sayi
    if sayi <= 1:
        return 1
    return (sonuc * faktoriyel(sayi - 1))
print(faktoriyel(5))

